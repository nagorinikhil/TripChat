<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="90dp"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageView_AllTrips" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_titleAllTrips"
                android:layout_toRightOf="@+id/imageView_AllTrips"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"/>

            <TextView
                android:text="Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_locationAllTrips"
                android:layout_below="@+id/textView_titleAllTrips"
                android:layout_toRightOf="@+id/imageView_AllTrips"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"/>

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView_locationAllTrips"
                android:layout_toRightOf="@+id/imageView_AllTrips"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:id="@+id/textView_creatorAllTrips" />

            <Button
                android:text="Join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_joinAllTrips"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/textView_creatorAllTrips"
                android:tag="Join" />

            <Button
                android:text="Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/button_joinAllTrips"
                android:layout_below="@+id/textView_creatorAllTrips"
                android:id="@+id/button_chatRoomAllTrips" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
